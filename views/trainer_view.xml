<odoo>
  <data>
    <record model="ir.ui.view" id="gym_app.trainer_model_list">
      <field name="name">trainer List</field>
      <field name="model">gym_app.trainer_model</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id_trainer"/>
          <field name="name"/>
          <field name="surname"/>
          <field name="dni"/>
          <field name="phone"/>
          <field name="email"/>
        </tree>
      </field>
    </record>

    <!-- Optional views-->
    <record model="ir.ui.view" id="gym_app.trainer_kanban">
      <field name="name">trainer kanban</field>
      <field name="model">gym_app.trainer_model</field>
      <field name="arch" type="xml">
        <kanban class="o_res_partner_kanban">
          <field name="dni"/>
          <field name="name"/>
          <field name="surname"/>
          <field name="photo"/>
          <field name="email"/>
          <field name="phone"/>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_global_click">
                <div class="o_kanban_image">
                  <field name="photo" nolabel="1" widget="image" class="oe_right oe_avatar"/>
                </div>
                <div class="oe_kanban_details">
                  <strong>
                    <field name="surname" class="oe_inline"/>,<field name="name" class="oe_inline"/>
                  </strong>
                  <div t-if="record.phone.value">
                    <t t-esc="record.phone.value"/>
                  </div>
                  <div t-if="record.email.value">
                    <t t-esc="record.email.value"/>
                  </div>
                  <div t-if="record.dni.value">
                    <t t-esc="record.dni.value"/>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- FORM-->
    <record model="ir.ui.view" id="gym_app.trainer_model_form">
      <field name="name">Trainer Form</field>
      <field name="model">gym_app.trainer_model</field>
      <field name="arch" type="xml">
        <form string="trainer">
          <header>
            <!-- Buttons here-->
          </header>
          <notebook>
            <page string="Personal data">
              <group>
                <group name="left">
                  <field name="name"/>
                  <field name="surname"/>
                  <field name="dni"/>
                  <field name="photo" widget="image"/>
                  <field name="phone"/>
                  <field name="email"/>
                </group>
              </group>
            </page>
            <page string="Clients">
              <group colspan="2">
                <field name="client_ids">
                  <tree>
                    <field name="id_client"/>
                    <field name="name"/>
                    <field name="surname"/>
                    <field name="dni"/>
                  </tree>
                </field>
              </group>
            </page>
            <page string="Classes">
              <group colspan="2">
                <field name="class_ids">
                  <tree>
                    <field name="name"/>
                    <field name="description"/>
                  </tree>
                </field>
              </group>
            </page>
          </notebook>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gym_app.action_window_trainer">
      <field name="name">Trainers</field>
      <field name="res_model">gym_app.trainer_model</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>


